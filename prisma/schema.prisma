datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Category {
  id      String    @id @default(auto()) @map("_id") @db.ObjectId
  cname   String    @unique
  Product Product[]
}

model Product {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  pname    String    @unique
  pdesc    String
  category Category  @relation(fields: [cid], references: [id])
  cid      String    @db.ObjectId
}

model Image {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  src      String
  alt       String
}